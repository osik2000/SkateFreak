<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/skatefreak_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/skatefreak_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SkateFreak"
        tools:targetApi="31">
        <activity
            android:name=".MainMenuActivity"
            android:exported="false"
            android:label="@string/title_activity_main_menu"
            android:theme="@style/Theme.SkateFreak" />
        <activity
            android:name=".UserSetDataActivity"
            android:exported="false"
            android:label="@string/title_activity_user_set_data"
            android:theme="@style/Theme.SkateFreak" />
        <activity
            android:name=".LoggedUserMenuActivity"
            android:exported="false"
            android:label="@string/title_activity_logged_user_menu"
            android:theme="@style/Theme.SkateFreak" />
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.SkateFreak" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.SkateFreak">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>